                    },
                    "body_content": [
                        {
                            "explanation": "a device for measuring the amount or size of something: ",
                            "examples": [
                                "a fuel/rain/temperature gauge"
                            ]
                        },
                        {
                            "explanation": "a device used to measure the pressure of the air in a tyre: ",
                            "examples": [
                                "Do you have a tyre gauge in your car?"
                            ]
                        },
                        {
                            "explanation": "the distance between the rails (= the two long metal bars attached to the ground) on a railway line: ",
                            "examples": [
                                "The trains run on narrow-gauge/standard-gauge railways."
                            ]
                        },
                        {
                            "explanation": "the thickness of something, especially metal or wire",
                            "examples": []
                        },
                        {
                            "explanation": "the space inside a pipe or tube, or the diameter of (= measurement across) this space: ",
                            "examples": [
                                "a narrow gauge",
                                "a gauge of 16 millimetres"
                            ]
                        },
                        {
                            "explanation": "a way of judging or showing something, especially how successful or popular something is: ",
                            "examples": [
                                "The fact that the play is being performed on Broadway is a gauge of its success."
                            ]
                        }
                    ]
                }
